<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context="programe.projeto.com.programe.NameUser">

    <ImageView
        android:id="@+id/logo_view"
        android:src="@drawable/programe"
        android:layout_width="match_parent"
        android:layout_height="100dp" />



    <TextView
        android:layout_below="@id/logo_view"
        android:id  ="@+id/title_view"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="@string/info_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:text="@string/fornece_nome"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"/>

        <EditText
            android:textColor="@color/colorPrimary"
            android:id="@+id/name_view_edit"
            android:textSize="20sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_below="@id/name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:text="@string/fornece_email"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"/>

        <EditText
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:id="@+id/email_view_edit"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
        android:onClick="buttomConfirm"
        android:id="@+id/buttom_confirm"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:text="@string/confirmar_nameUser"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@drawable/color_edit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
